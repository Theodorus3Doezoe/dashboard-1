<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dashboard.Component.Module"
             BackgroundColor="Black">
    <Border Stroke="DarkGray" StrokeThickness="1" Padding="10"
            Margin="10"
            BackgroundColor="#2C2C2C"
            >
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>

        <VerticalStackLayout Spacing="10">

            <Label x:Name="LabelTitle"
                   Text="U1"
                   TextColor="White"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <BoxView HeightRequest="1"
                     Color="DarkGray"
                     Margin="0,5,0,10"/>

            <Grid RowDefinitions="Auto,Auto,Auto"
                  ColumnDefinitions="Auto,*"
                  RowSpacing="15"
                  ColumnSpacing="15">

                <Image Grid.Row="0" Grid.Column="0"
                       Source="heart_icon.png" HeightRequest="30"
                       WidthRequest="30"
                       Aspect="AspectFit"
                       VerticalOptions="Center"/>
                <Label x:Name="LabelHeartRate"
                       Grid.Row="0" Grid.Column="1"
                       Text="120"
                       TextColor="White"
                       FontSize="28"
                       VerticalOptions="Center"/>

                <Image Grid.Row="1" Grid.Column="0"
                       Source="temperature_icon.png" HeightRequest="30"
                       WidthRequest="30"
                       Aspect="AspectFit"
                       VerticalOptions="Center"/>
                <Label x:Name="LabelTemperature"
                       Grid.Row="1" Grid.Column="1"
                       Text="37.6"
                       TextColor="White"
                       FontSize="28"
                       VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="37.6"/>
                            <Span Text=" Â°C" FontSize="20"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Image Grid.Row="2" Grid.Column="0"
                       Source="oxygen_icon.png" HeightRequest="30"
                       WidthRequest="30"
                       Aspect="AspectFit"
                       VerticalOptions="Center"/>
                <Label x:Name="LabelOxygen"
                       Grid.Row="2" Grid.Column="1"
                       Text="97%"
                       TextColor="White"
                       FontSize="28"
                       VerticalOptions="Center"/>

            </Grid>
        </VerticalStackLayout>
    </Border>
</ContentView>